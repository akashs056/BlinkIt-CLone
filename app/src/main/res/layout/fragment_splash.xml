<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffbe0b"
    tools:context=".Auth.SplashFragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_80sdp"
                android:text="blinkit"
                android:textColor="#000000"
                android:textSize="@dimen/_68ssp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_80sdp"
                android:text="it"
                android:textColor="@color/green"
                android:textSize="@dimen/_68sdp"
                android:textStyle="bold"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="India\'s last minute app"
            android:textSize="@dimen/_15ssp"
            android:textColor="#000000"
            />
        <View
            android:layout_width="@dimen/_220sdp"
            android:layout_height="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="#7B7777"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A ZOMATO COMPANY"
            android:letterSpacing="0.1"
            android:textColor="#000000"
            android:layout_marginTop="@dimen/_20sdp"
            android:textSize="@dimen/_8ssp"
            android:textStyle="bold"/>


        
        
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>